<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.bamboy.bamboycollected.views.clickanimview.BamRelativeLayout
        android:id="@+id/rl_fresh"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_fresh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/icon_android" />

        <TextView
            android:id="@+id/tv_fresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_fresh"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:text="最新上架"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </com.bamboy.bamboycollected.views.clickanimview.BamRelativeLayout>

    <com.bamboy.bamboycollected.views.clickanimview.BamRelativeLayout
        android:id="@+id/rl_hot"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_hot"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/icon_android" />

        <TextView
            android:id="@+id/tv_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_hot"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:text="热门精选"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </com.bamboy.bamboycollected.views.clickanimview.BamRelativeLayout>

    <com.bamboy.bamboycollected.views.clickanimview.BamRelativeLayout
        android:id="@+id/rl_classic"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_classic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/icon_android" />

        <TextView
            android:id="@+id/tv_classic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_classic"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:text="重温经典"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </com.bamboy.bamboycollected.views.clickanimview.BamRelativeLayout>

    <com.bamboy.bamboycollected.views.clickanimview.BamRelativeLayout
        android:id="@+id/rl_sleep"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_sleep"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/icon_android" />

        <TextView
            android:id="@+id/tv_sleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_sleep"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:text="睡前小酌"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </com.bamboy.bamboycollected.views.clickanimview.BamRelativeLayout>

</LinearLayout>
